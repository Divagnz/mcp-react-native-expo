{
  "name": "@divagnz/react-native-expo-mcp",
  "version": "0.1.0",
  "description": "React Native Expo MCP server - forked and expanded with expert code remediation, advanced refactoring, modular architecture, and comprehensive testing. Professional development companion for React Native teams with upcoming Expo, ADB, and iOS tool integration.",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "react-native-expo-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "prepublishOnly": "npm run quality && npm test && npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "react-native",
    "code-analysis",
    "performance-optimization",
    "best-practices",
    "debugging",
    "package-management",
    "dependency-resolution",
    "security-audit",
    "ai-assistant",
    "developer-tools",
    "code-quality",
    "testing",
    "accessibility",
    "linting",
    "refactoring"
  ],
  "author": {
    "name": "Divagnz",
    "url": "https://github.com/Divagnz"
  },
  "contributors": [
    {
      "name": "mrnitro360"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Divagnz/React-Native-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/Divagnz/React-Native-MCP/issues"
  },
  "homepage": "https://github.com/Divagnz/React-Native-MCP#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "qrcode": "^1.5.4",
    "winston": "^3.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "minimist": "^1.2.8"
  },
  "files": [
    "build/"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "src/index.ts": [
      "eslint --fix"
    ],
    "src/{prompts,resources}/**/*.ts": [
      "eslint --fix"
    ]
  }
}
